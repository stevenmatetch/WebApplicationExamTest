<div class="row">
    <div class="col-md-12">
        <form asp-action="ViewExam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" readonly class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Test" class="control-label"></label>
                <input asp-for="Test" style="height:800px;width;800px;" readonly class="form-control" />
                <span asp-validation-for="Test" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentAnswer" class="control-label"></label>
                <input asp-for="StudentAnswer" style="height:800px;width;800px" class="form-control" />
                <span asp-validation-for="StudentAnswer" class="text-danger"></span>
            </div>
